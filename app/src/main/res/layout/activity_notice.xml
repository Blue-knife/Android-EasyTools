<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSendNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送通知" />

    <Button
        android:id="@+id/btnSendCustomNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送自定义通知"
        app:layout_constraintLeft_toRightOf="@id/btnSendNotice" />

    <Button
        android:id="@+id/btnAddChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="添加渠道"
        app:layout_constraintTop_toBottomOf="@id/btnSendNotice" />

    <Button
        android:id="@+id/btnIsChannels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="判断渠道是否打开"
        app:layout_constraintEnd_toEndOf="@+id/btnSendCustomNotice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnAddChannel"
        app:layout_constraintTop_toBottomOf="@+id/btnSendCustomNotice" />
</androidx.constraintlayout.widget.ConstraintLayout>