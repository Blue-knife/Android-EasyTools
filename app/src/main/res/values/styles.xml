<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    圆角-->
    <declare-styleable name="ViewOutLineStrategy">
        <attr name="radius" format="dimension" />
        <attr name="radiusSide" format="enum">
            <enum name="all" value="0" />
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>

    <style name="select_image_tv">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/select_image_tv_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10.0dip</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
